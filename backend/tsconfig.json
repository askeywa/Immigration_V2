{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"],
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"],
        "@/config/*": ["./config/*"],
        "@/models/*": ["./models/*"],
        "@/controllers/*": ["./controllers/*"],
        "@/services/*": ["./services/*"],
        "@/routes/*": ["./routes/*"],
        "@/middleware/*": ["./middleware/*"],
        "@/utils/*": ["./utils/*"],
        "@/types/*": ["./types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
  }