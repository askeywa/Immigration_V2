# Use legacy peer dependency resolution
legacy-peer-deps=true

# Skip Puppeteer download in production (download manually if needed)
puppeteer_skip_download=false

# Disable update notifier during CI/CD
no-update-notifier=true

# Prefer offline for faster installs
prefer-offline=true

# Build native modules from source for better compatibility
build-from-source=true

# Set registry (default npm registry)
registry=https://registry.npmjs.org/